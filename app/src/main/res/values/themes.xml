<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarvelFanBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_700</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="bodyTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>

        <item name="spaceHuge">@dimen/gap_huge</item>
        <item name="spaceDouble">@dimen/gap_double</item>
        <item name="spaceBig">@dimen/gap_big</item>
        <item name="spaceRegular">@dimen/gap_regular</item>
        <item name="spaceSmall">@dimen/gap_small</item>
        <item name="spaceHalf">@dimen/gap_half</item>
        <item name="spaceLessHalf">@dimen/gap_less_half</item>
        <item name="spaceTiny">@dimen/gap_tiny</item>

        <item name="skeletonBaseColor">@color/primary_900</item>
        <item name="skeletonHighlightColor">@color/primary_800</item>

        <!-- Text -->
        <item name="android:fontFamily">@font/marvel_family</item>
        <item name="fontFamilyBold">@font/american_captain_bold</item>
    </style>

    <style name="Theme.MarvelFanBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black_trans_20</item>
    </style>

    <style name="Theme.MarvelFanBook.SplashTheme" parent="Theme.SplashScreen">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="windowSplashScreenBackground">@color/splash_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/primary_500</item>
        <item name="postSplashScreenTheme">@style/Theme.MarvelFanBook</item>
    </style>

</resources>