<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/ComicSectionTitleStyle"
        android:id="@+id/comicSectionTv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:text="@string/comics"
        android:layout_marginBottom="?spaceRegular"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dataListRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="?spaceRegular"
        app:layout_constraintTop_toBottomOf="@id/comicSectionTv" />

</androidx.constraintlayout.widget.ConstraintLayout>