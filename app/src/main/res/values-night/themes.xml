<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarvelFanBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_200</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white_trans_70</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="bodyTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/black_trans_80</item>

        <item name="spaceHuge">@dimen/gap_huge</item>
        <item name="spaceDouble">@dimen/gap_double</item>
        <item name="spaceBig">@dimen/gap_big</item>
        <item name="spaceRegular">@dimen/gap_regular</item>
        <item name="spaceSmall">@dimen/gap_small</item>
        <item name="spaceHalf">@dimen/gap_half</item>
        <item name="spaceLessHalf">@dimen/gap_less_half</item>
        <item name="spaceTiny">@dimen/gap_tiny</item>

    </style>

</resources>