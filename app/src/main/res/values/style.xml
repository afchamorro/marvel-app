<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Home -->
    <style name="SuperheroCardViewStyle">
        <item name="cardBackgroundColor">?cardBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/superhero_card_corners_radius</item>
        <item name="android:layout_margin">@dimen/superhero_card_margin</item>
    </style>

    <style name="SuperheroNameStyle">
        <item name="android:textAppearance">@style/TextAppearance.Theme.Marvel.Subtitle1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">3</item>
        <item name="android:minLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">?spaceHalf</item>
        <item name="android:background">@drawable/title_gradient_black_bg</item>
    </style>

    <style name="AttributionLinkStyle">
        <item name="android:textAppearance">@style/TextAppearance.Theme.Marvel.Caption</item>
        <item name="android:background">?colorPrimaryVariant</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Super Hero Detail -->
    <style name="SuperheroCollapsingToolbarLayoutStyle">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Collapsed</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleMarginBottom">@dimen/toolbarExpandedTitleMarginBottom</item>
        <item name="expandedTitleMarginStart">@dimen/toolbarExpandedTitleMarginStart</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.App.CollapsingToolbar.Expanded</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="statusBarScrim">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SuperheroRecycleViewStyle">
        <item name="android:background">?colorPrimary</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SuperheroDescriptionStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?bodyTextColor</item>
        <item name="android:padding">?spaceRegular</item>
    </style>


</resources>